page {
  height: 100%;
}
.outBox {
  height: 100%;
}
.outBox .menuListBox {
  width: 100%;
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.outBox .menuListBox .boxLeft {
  font-size: 0.6em;
  width: 150rpx;
  height: 100%;
  height: 100%;
  background-color: #f1eeee;
}
.outBox .menuListBox .boxLeft view {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #333;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  border-right: 1px solid #eee;
}
.outBox .menuListBox .boxLeft .active {
  background-color: #ffffff;
  border-bottom: 2px solid #d81e06;
}
.outBox .menuListBox .boxRight {
  width: 600rpx;
  height: 100%;
}
.outBox .menuListBox .boxRight .rightItem {
  height: 100%;
}
.outBox .menuListBox .boxRight .rightItem .itemBox {
  margin-top: 10rpx;
}
.outBox .menuListBox .boxRight .rightText {
  margin-top: 20rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 13px;
}
.outBox .menuListBox .boxRight .rightChoose {
  width: 490rpx;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  margin: 0 auto;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  -webkit-align-content: flex-start;
          align-content: flex-start;
}
.outBox .menuListBox .boxRight .choose {
  -webkit-box-flex: 0;
  -webkit-flex: 0 0 110rpx;
          flex: 0 0 110rpx;
  width: 20rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #f1eeee;
  color: #A0A0A0;
  font-size: 26rpx;
  border-radius: 30rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
}

